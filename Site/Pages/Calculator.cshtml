@page
@model Site.Pages.CalculatorModel
@{
    ViewData["Title"] = "Calculator page";
}
 <h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
   
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/calculator.css">

    <title>Calculator</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/ico/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/ico/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/ico/favicon-16x16.png">
    <link rel="manifest" href="/ico/site.webmanifest">

</head>
<body>

    <div class="wrapper">

        <section class="screen">
            0
        </section>

        <section class="calc-buttons">
            <div class="calc-button-row">
                <button class="calc-button-item double">C</button>
                <button class="calc-button-item">&larr;</button>
                <button class="calc-button-item">&divide;</button>
            </div>
            <div class="calc-button-row">
                <button class="calc-button-item">7</button>
                <button class="calc-button-item">8</button>
                <button class="calc-button-item">9</button>
                <button class="calc-button-item">&times;</button>
            </div>
            <div class="calc-button-row">
                <button class="calc-button-item">4</button>
                <button class="calc-button-item">5</button>
                <button class="calc-button-item">6</button>
                <button class="calc-button-item">&minus;</button>
            </div>
            <div class="calc-button-row">
                <button class="calc-button-item">1</button>
                <button class="calc-button-item">2</button>
                <button class="calc-button-item">3</button>
                <button class="calc-button-item">&plus;</button>
            </div>
            <div class="calc-button-row">
                <button class="calc-button-item triple">0</button>
                <button class="calc-button-item">&equals;</button>
            </div>
        </section>
    </div>


    <script src="/js/calculator.js"></script>
</body>
</html> 